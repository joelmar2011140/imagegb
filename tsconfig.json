{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "incremental": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "pretty": true,
        "rootDir": "src",
        "sourceMap": true,
        "noEmitOnError": true,
        "outDir": "dist",
        "baseUrl": ".",
    },
    "include": [
        "src/**/*"
    ]
}